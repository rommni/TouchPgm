<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="touchpgm.ihm.the.touchpgm">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="fr.telecom_st_etienne.ihm.touchpgm.activity.Accueil">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.telecom_st_etienne.ihm.touchpgm.activity.InGame"
            android:label="@string/title_activity_main3"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="fr.telecom_st_etienne.ihm.touchpgm.activity.ScoreResult"
            android:label="@string/title_activity_main4"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="fr.telecom_st_etienne.ihm.touchpgm.activity.Waiting"
            android:label="@string/title_activity_waiting"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="fr.telecom_st_etienne.ihm.touchpgm.activity.CalmDown"
            android:label="@string/title_activity_calm_down"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>